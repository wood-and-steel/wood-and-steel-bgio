{
  "compilerOptions": {
    "checkJs": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
